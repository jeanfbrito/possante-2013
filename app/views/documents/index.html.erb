<div id="content">
    <div class="container">
    
              <div id="tools">
                <%= link_to vehicle_maintenances_path(@vehicle) do %>
                  <i class="fa fa-chevron-circle-left fa-2x" data-toggle="tooltip" title="Manutenções"></i>
                   Manutenções
                <% end %>
                <a href="<%= new_vehicle_maintenance_document_path(@vehicle,@maintenance)%>" class="btn btn-success pull-right spaced">
                  <i class="fa fa-plus">
                  </i> Novo documento</a>
              </div>
              
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th></th> 
                    <th>Titulo</th>                
                    <th>Descrição</th>
                    <th>Arquivo</th>
                  </tr>
                </thead>
                <tbody>
                  <% @documents.each do |document| %>
                  <tr>
                    <td style="text-align: center;" class="refill-actions">
                      <%= link_to edit_vehicle_maintenance_document_path(@vehicle, @maintenance, document) do %>
                        <i class="fa fa-edit"></i>
                      <% end %>
                      <%#= link_to raw('<i class="fa fa-edit" data-toggle="tooltip" title="Editar documento"></i>'), 
                        "#editDocument", 
                        :data => { :url => edit_vehicle_maintenance_document_path(@vehicle, @maintenance, document), :toggle => "modal" }, 
                        :class => "edit-document-button" %>
                    </td>
                    <td>
                      <%= document.title %>
                    </td>
                    <td>
                      <%= document.description %>
                    </td>
                    <td>
                      <a href="<%= document.file.url %>">
                        <%= document.file.name %>
                      </a>
                    </td>
                  </tr>
                  <% end %>           
                </tbody>
              </table>
  </div>
</div>